# Build stage
FROM golang:1.22-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the KV store example
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o kv-store ./examples/kv-store

# Final stage
FROM alpine:latest

RUN apk --no-cache add ca-certificates

WORKDIR /root/

# Copy the binary from builder stage
COPY --from=builder /app/kv-store .

# Expose ports
EXPOSE 8080 9000

# Run the binary
CMD ["./kv-store"]
